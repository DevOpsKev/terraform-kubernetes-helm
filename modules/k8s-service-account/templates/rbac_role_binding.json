{
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "kind": "RoleBinding",
    "metadata": {
        "name": "${service_account_name}-role-binding",
        "namespace": "${namespace}",
        "labels": ${encoded_labels},
        "annotations": ${encoded_annotations}
    },
    "subjects": [
        {
            "kind": "ServiceAccount",
            "name": "${service_account_name}",
            "namespace": "${namespace}"
        }
    ],
    "roleRef": {
        "apiGroup": "rbac.authorization.k8s.io",
        "kind": "Role",
        "name": "${role_name}"
    }
}
