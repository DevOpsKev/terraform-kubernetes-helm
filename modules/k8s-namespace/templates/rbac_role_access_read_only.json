{
    "kind": "Role",
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "metadata": {
        "namespace": "${namespace}",
        "name": "${namespace}-access-read-only"
    },
    "rules": [
        {
            "apiGroups": ["*"],
            "resources": ["*"],
            "verbs": ["get", "list", "watch"]
        }
    ]
}
